{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "yt-dlp-x",
  "version": "2025.11.5",
  "identifier": "com.apple.yt-dlp-x",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "yt-dlp-x",
        "width": 1024,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg",
      "appimage",
      "deb",
      "rpm",
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  }
}
